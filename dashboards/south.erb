<script type='text/javascript'>
$(function() {
  // These settings override the defaults set in application.coffee. You can do this on a per dashboard basis.

  Dashing.widget_base_dimensions = [260, 109]
  Dashing.numColumns = 4
});
</script>
<link href='http://fonts.googleapis.com/css?family=Armata' rel='stylesheet' type='text/css'>
<style>
  body, div, p, li, span {
    font-family: 'Armata', 'Century Gothic', 'Arial';
  }
</style>


<% content_for :title do %>The Salt Mines Dashboard<% end %>

<div class="gridster">
  <ul>
    <li id="clock" data-row="1" data-col="1" data-sizex="4" data-sizey="1">
      <div data-view="Clock"></div>
    </li>
    <li id="radio" data-row="2" data-col="1" data-sizex="2" data-sizey="7">
      <div data-id="radio" data-view="Radio" data-title="Salt Mines Radio"</div>
    </li>
    <li id="events" data-row="2" data-col="3" data-sizex="2" data-sizey="4">
      <div data-id="events-south" data-view="Bookings" data-title="Conference Room Schedule"></div>
    </li>
    <li id="gyro" data-row="9" data-col="1" data-sizex="1" data-sizey="2">
      <div data-id="gyro" data-view="Number" data-title="Gyro Count" style="background-color:#96bf48;"></div>
      <i class="icon-truck icon-background" style="font-size:165px"></i>
    </li>

    <li id="weather" data-row="9" data-col="2" data-sizex="1" data-sizey="2">
      <div data-id="weather" data-view="Weather"></div>
    </li>

    <li id="transit" data-row="12" data-col="1" data-sizex="4" data-sizey="3">
      <div data-id="transit" data-view="Iframe" data-url="/transit.html"></div>
    </li>

    <li id="dark_sky" data-row="15" data-col="1" data-sizex="4" data-sizey="2">
      <div data-id="dark_sky" data-view="DarkSky" data-title="Dark Sky" data-displayed-value="summary"></div>
    </li>
  </ul>
</div>
